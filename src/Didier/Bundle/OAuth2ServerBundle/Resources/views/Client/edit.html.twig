{% extends '::base.html.twig' %}

{% block body %}
    <div class="form">  
        <form id="login" class="vertical" action="{{ path('didier_oauth2_server_client_edit', {id: client.id}) }}" method="POST">  
            <div class="form_title">
                Edit client {{ client.name }}
            </div>
            {% if null != error|default(null) %}
                <div class='form_error'>{{ error }}</div>
            {% endif %}

            {{ form_rest(form) }}

            <div class="form_button">
                <input type="submit" id="_submit" name="_submit" value="Edit" />
            </div>
        </form>
    </div>
{% endblock %}
