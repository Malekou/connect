<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="didier_crud.router_loader" class="Didier\Bundle\CRUDBundle\Routing\RouterLoader">
            <argument type="service" id="didier_crud.config" />
            <tag name="routing.loader" />
        </service>

        <service id="didier_crud.connector.doctrine" class="Didier\Bundle\CRUDBundle\Connector\DoctrineConnector">
            <argument type="service" id="doctrine" />
        </service>
    </services>
</container>
